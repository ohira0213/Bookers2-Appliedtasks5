<table class="table table-hover table-inverse">
  <% if @range == "User" %>
  <h2>Users search for "<%= params[:word] %>"</h2>
    <tbody>
      <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="3"></th>
      </tr>
      <% @users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image(40,40) %></td>
        <td><%= user.name %></td>
        <td><%= user.introduction %></td>
        <td><%= link_to "Show", user_path(user) %></td>
      </tr>
      <% end %>
    </tbody>
  <% else %>
  <h2>Books search for "<%= params[:word] %>"</h2>
    <tbody>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
        <% @books.each do |book| %>
        <tr>
          <td><%= image_tag book.user.get_profile_image(40,40) %></td>
          <td><%= link_to book.title, books_path %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>